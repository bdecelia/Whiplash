<div class="container">
    <h3>Stream Options</h3>
    <div id="stream_options">
        <form id="menu1_form">
            <%# TODO: add file upload/download options  %>
            Video ID: <input id="stream_input" name="id"></br>
            Word Search: <input id="search" name="q"></br>
            <button type="submit">Submit</button>
        </form>
    </div>
</div>

<script type='text/javascript'>
    $("#menu1_form").submit(function(e) {
    e.preventDefault(); // avoid to execute the actual submit of the form.
    $.ajax({
           type: "POST",
           url: "/video",
           data: $("#menu1_form").serialize(),
           success: function(data){  // TODO: clean up vars
               window.streamData = data;
               window.channelName = data["channel_name"];
               window.streamName = data["stream_name"];
               window.liveChatID = data["live_chat_id"]; }
         });
    });
</script>